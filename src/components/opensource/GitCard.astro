---
import { Icon } from "astro-icon";

interface Props {
  id: number;
  full_name: string;
  html_url: string;
  description: string;
  stargazers_count: number;
}

const { id, full_name, html_url, description, stargazers_count } = Astro.props;
---

<div class="card" id={String(id)}>
  <div class="card-content">
    <div class="columns is-mobile">
      <div class="column is-1-desktop is-2-tablet is-2-mobile">
        <Icon size={38} name="eva:github-outline" />
      </div>
      <div class="column is-offset-1-desktop is-9-desktop is-7-mobile">
        <a href={html_url}>
          <h6 class="is-size-5-desktop is-size-6-tablet is-size-6-mobile">{full_name}</h6>
        </a>
      </div>
    </div>

    <div class="content">
      {description}
    </div>
  </div>
</div>

