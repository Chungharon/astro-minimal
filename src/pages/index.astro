---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/common/Hero.astro";
import Card from "../components/common/Card.astro";

import { indexData, latestArticles } from "../utils/variables";

const { title, description } = indexData;
---

<BaseLayout title={title} description={description}>
  <section class="column is-6-desktop is-12-tablet">
    <Hero
      title="Hello I'm Domenico! ðŸ‘‹"
      titleSize="is-size-2"
      titleSizeMobile="is-size-2"
      subtitle="Software developer passionate about the IT world and everything related to it. I write technical articles to share my experiences and knowledge."
      subtitleSize="is-size-4"
      subtitleSizeMobile="is-size-5"
      size="is-medium"
    />
  </section>

  <section class="m-6">
    <h2 class="dark-gray ">Latest Articles</h2>
    <a class="light-gray" href="/blog">Read all my articles ðŸ‘‰</a>
    <div class="mt-6">
      <div class="columns is-desktop">
        {
          latestArticles.map((article) => {
            return (
              <div class="column is-3-desktop is-12-tablet">
                <Card
                  image={article.image}
                  title={article.title}
                  placeholder={article.placeholder}
                  url={article.url}
                  description={article.description}
                  date={article.date}
                />
              </div>
            );
          })
        }
      </div>
    </div>
  </section>
</BaseLayout>
